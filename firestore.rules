rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User profile subcollection
      match /profile/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Integrations (Strava tokens, etc.)
      match /integrations/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Planning data (camps, goals, constraints)
      match /planning/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Training plans
      match /plans/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Activities
      match /activities/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Daily metrics (morning check, TSS, fitness metrics)
      match /dailyMetrics/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Notifications
      match /notifications/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Daily metrics - user-scoped by date format including uid
    match /fact_daily_metrics/{userId}/{date} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Global collections (read-only for authenticated users)
    match /system/{document} {
      allow read: if request.auth != null;
    }
    
    // Admin collections (only for admin users)
    match /admin/{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
  }
}